@using NetInformatika.Views.Models;
@model RegisterViewModel;
@{
    ViewData["Title"] = "Register";
}

<div class="auth container">
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-5">
            <h2>Register</h2>
            <form method="post" action="register">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Enter password again">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <button type="submit" class="btn btn-primary">Register</button>
                <hr/>
                <a href="/login">Already have an account?</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}